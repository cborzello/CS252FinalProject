
<% include partials/header %>

<section class="fdb-block pt-0">
    <div class="container-fluid p-0 pb-md-5">
      <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d12149.856067679322!2d-86.9123206!3d40.42072305!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1509674953525" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <div class="container">
      <div class="row mt-5">
        <div class="col-12 col-md-6 col-lg-5">
          <h2>Contact Us</h2>
          <p class="text-h3">
            Is our page not working? New features you think would improve the site? Let us know your suggestions!
          </p>

          <p class="text-h3">
            We take your feedback seriously. Every form is reviewed by the developers for potential changes and improvement.
          </p>


          <p class="text-h3 mt-5">
            <strong>Email:</strong> <a href="https://www.froala.com">teamfulqrum@gmail.com</a>
          </p>
          <p class="text-h3">
            <strong>Phone:</strong> <a href="https://www.froala.com">+765 123 4567</a>
          </p>
        </div>

        <div class="col-12 col-md-6 ml-auto pt-5 pt-md-0">
          <form action="/feedback" method="POST">
            <div class="row">
              <div class="col">
                <input type="text" name="firstName" class="form-control" placeholder="First name" required>
              </div>
              <div class="col">
                <input type="text" name="lastName" class="form-control" placeholder="Last name" required>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col">
                <input name="email" type="email" class="form-control" placeholder="Enter email" required>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col">
                <input  name="subject" class="form-control"  placeholder="Subject" required>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <input class="form-control" name="message" rows="3" placeholder="How can we help?" required>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <button type="submit" class="btn">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

