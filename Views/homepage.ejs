<!--  Video is muted & autoplays, placed after major DOM elements for performance & has an image fallback  -->
<video autoplay loop id="video-background" muted plays-inline>
<%var url;
  if(type === null || type === undefined) {
      type = "snowy";
  }
  switch(type) {
    case "sunny":
        url = "videos/sunnyBackground.mp4";
        break;
    case "cloudy":
        url = "videos/cloudyBackground.mp4";
        break;
    case "rainy":
        url = "videos/rainyBackground.mp4";
        break;
    case "stormy":
        url = "videos/stormyBackground.mp4";
        break;
    case "snowy":
        url = "videos/snowyBackground.mp4";
        break;
    case "haily":
    url = "videos/hailyBackground.mp4";
      break;
    default:
        url = "videos/cloudyBackground.mp4";

}


%>
<source src=<%-url%> type="video/mp4">
</video>




