<% include partials/header %>


    <!-- MEAT AND TATERS OF APP -->
      <form method="get" class="form">
        <fieldset>
          <ul class="list-reset">
            <li class="form-field">
              <label for="city-search">City Name</label>
              <input type="text" id="city-search" placeholder="e.g. Rochester, NY">
            </li>

            <li class="form-field">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" id="latitude" placeholder="e.g. 42.9150747" required>
            </li>

            <li class="form-field">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" id="longitude" placeholder="e.g. -77.784323" required>
            </li>

            <li class="form-field">
              <input type="checkbox" id="celsius">
              <label for="celsius">Report Celsius</label>
            </li>
          </ul>
        </fieldset>

        <button>Get Weather</button>
      </form>

  <script src="../Models/weather.js"></script>


  <% include  partials/footer %>
